POSTGRES_USER=owner
POSTGRES_PASSWORD=pass
DATABASE_URL=jdbc:postgresql://test.domain_here.com:5432/neondb?sslmode=require&channel_binding=require
JWT_SECRET=change-this-secret-to-at-least-32-bytes-long

# App network
SERVER_PORT=8080
APP_PUBLIC_PORT=8080

# Enable HTTPS profile in prod: SPRING_PROFILES_ACTIVE=https
SPRING_PROFILES_ACTIVE=
# Mount path on host with cert files (for prod, e.g. /etc/letsencrypt/live/spapi.example.com)
SSL_CERTS_DIR=./certs
# Paths inside container (must exist when profile https is enabled)
SERVER_SSL_CERTIFICATE=
SERVER_SSL_PRIVATE_KEY=

REDIS_HOST=redis
REDIS_PORT=6379
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
APP_SOCIAL_ASYNC_ENABLED=true
APP_SOCIAL_REDIS_ENABLED=true
APP_SOCIAL_KAFKA_TOPIC=social-events
APP_SOCIAL_REDIS_STATS_TTL=PT24H
APP_SOCIAL_REDIS_LIKES_TTL=PT24H
APP_SOCIAL_REDIS_POSTS_TTL=PT168H
